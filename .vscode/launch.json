{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug CMake Project",
            "type": "cppdbg",
            "request": "launch",
            // 关键：指向 CMake 构建出的可执行文件
            "program": "${workspaceFolder}/build/lce",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            // 关键：调试前先执行 CMake 构建
            "preLaunchTask": "CMake Build"
        }
    ]
}